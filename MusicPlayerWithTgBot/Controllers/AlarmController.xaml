<UserControl
    x:Class="MusicPlayerWithTgBot.Controllers.AlarmController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MusicPlayerWithTgBot.Controllers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="55"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <DockPanel>
            <TextBlock
                x:Name="NameOfMusicTxt"
                Margin="5"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="Black"
                Text="Name" />

            <TextBox
                x:Name="PlayTimeTxt"
                Width="120"
                Margin="10"
                Padding="3"
                md:HintAssist.Hint="Enter Time (HH:MM)"
                FontSize="11"
                FontWeight="SemiBold"
                Foreground="Black"
                Style="{DynamicResource MaterialDesignOutlinedTextBox}" />
        </DockPanel>
    </Grid>
</UserControl>
